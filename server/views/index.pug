<!DOCTYPE html>
html(lang=lang)
  head
    meta(charset='utf-8')
    title=title

    meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')
    meta(name='apple-mobile-web-app-capable', content='yes')
    meta(name='apple-mobile-web-app-status-bar-style', content='black')
    link(rel='stylesheet', href='/css/bundle.min.css', charset='utf-8')
    link(rel='shortcut icon', href=favicon)

    script window.apiHost = "!{apiHost}"
    script window.frontHost = "!{frontHost}"
    script window.graphqlHost = "!{graphqlHost}"
    script window.env = "!{env}"
    script window.workersUrl = "!{workersUrl}"

  body(class=classes)
    div#app
    div#modal-root
    noscript
      h1 Error: Javascript Disabled
    include ../partials/footer
